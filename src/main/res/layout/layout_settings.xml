<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout style="@style/PanelTopMain">

        <ImageButton
            android:id="@+id/button_logo"
            style="@style/PanelButton"
            android:src="@drawable/ic_title_logo" />

        <ImageView style="@style/SeparatorVertical" />

        <TextView style="@style/TitleText" />
    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/settings_fragment_root"
        android:name="menion.android.whereyougo.gui.fragments.settings.WhereYouGoSettingsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
